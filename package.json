{
  "name": "mora-scripts",
  "version": "1.5.0",
  "description": "Some scripts for my own use",
  "scripts": {
    "postinstall": "node hooks/scripts/install",
    "postuninstall": "node hooks/scripts/install --reverse",
    "release": "cli/run npm version minor -m 'chore: bump minor version to pkg.version'",
    "preversion": "npm test",
    "version": "cli/puts '%cyou can run build and add build file to git in here' cyan",
    "postversion": "git push --follow-tags && npm publish && cli/run cnpm sync pkg.name",
    "lint": "standard libs/fs/*.js libs/fs/**/*.js",
    "test": "nyc _mocha **/test/__*.js",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "jsdoc -c ./jsdoc.json libs/fs/**",
    "test:libs:color": "cli/run node test/test-libs-color",
    "test:run:env": "cli/run a=a b='b b' c='* .' node test/test-cli-run-env",
    "test:run:base": "cli/run ENV='run test' node test/test-cli-run-base -v pkg.version --bar pkg.args.bar",
    "test:run:prefix": "cli/run --prefix % node test/test-cli-run-prefix -v %.version --foo '** %.args.foo **'"
  },
  "args": {
    "foo": "I am foo",
    "bar": "args.foo: pkg.args.foo"
  },
  "bin": {
    "hooks": "hooks/scripts/install.js",
    "run": "cli/run",
    "puts": "cli/pubs",
    "commit-msg-help": "cli/commit-msg-help"
  },
  "keywords": [
    "mora",
    "collection"
  ],
  "author": "Mora <qiuzhongleiabc@126.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/mora-scripts"
  },
  "license": "MIT",
  "dependencies": {
    "cross-spawn": "^4.0.0",
    "semver-regex": "1.0.0"
  },
  "devDependencies": {
    "codecov": "1.0.1",
    "docdash": "web-build-hub/docdash",
    "mocha": "2.5.3",
    "nyc": "6.6.1"
  },
  "config": {
    "hooks": {
      "commit-msg": {
        "command": "hooks/commit-msg.js",
        "showHelp": false
      },
      "post-merge": "hooks/post-merge.js"
    }
  },
  "nyc": {
    "check-coverage": false,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "report-dir": "externals/coverage",
    "include": [
      "cli/*",
      "libs/**/*.js",
      "js/**"
    ],
    "exclude": [
      "**/__*.js",
      "test/**/*.*"
    ]
  },
  "standard": {
    "ignore": [
      "/externals/**",
      ".*"
    ],
    "globals": [
      "it",
      "describe",
      "context",
      "xit",
      "xdescribe",
      "xcontext"
    ]
  }
}
