{
  "name": "mora-scripts",
  "version": "1.5.0",
  "description": "Some collection scripts by myself",
  "scripts": {
    "postinstall": "node hooks/scripts/install",
    "postuninstall": "node hooks/scripts/install --reverse",
    "release": "cli/run npm version minor -m 'chore: bump minor version to pkg.version'",
    "preversion": "npm run lint && npm test",
    "version": "cli/puts '%cyou can run build and add build file to git in here' cyan",
    "postversion": "git push --follow-tags && npm publish && cli/run cnpm sync pkg.name",
    "lint": "eslint libs/**/*.js",
    "test:watch": "mocha -R dot --watch **/test/__*.js",
    "test": "nyc _mocha **/test/__*.js",
    "report": "nyc report --reporter=html",
    "test:istanbul": "istanbul cover --report html --dir externals/coverage _mocha **/test/__*.js",
    "test:report": "npm run test && npm run report",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "jsdoc -c ./jsdoc.json"
  },
  "bin": {
    "run": "cli/run",
    "puts": "cli/puts",
    "hooks": "hooks/scripts/install.js",
    "commit-msg-help": "cli/commit-msg-help"
  },
  "config": {
    "hooks": {
      "commit-msg": true,
      "post-merge": true,
      "pre-push": "npm run lint && npm test -- --check-coverage"
    }
  },
  "keywords": [
    "mora",
    "scripts",
    "collection"
  ],
  "author": "Mora <qiuzhongleiabc@126.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/mora-scripts"
  },
  "license": "MIT",
  "dependencies": {
    "cross-spawn": "^4.0.0",
    "semver-regex": "1.0.0"
  },
  "devDependencies": {
    "codecov": "1.0.1",
    "docdash": "web-build-hub/docdash",
    "eslint": "3.8.1",
    "mocha": "3.1.2",
    "nyc": "8.4.0",
    "rewire": "2.5.2",
    "sinon": "1.17.6",
    "standard": "8.4.0"
  },
  "nyc": {
    "check-coverage": false,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "report-dir": "externals/coverage",
    "include": [
      "cli/*",
      "libs/**/*.js"
    ],
    "exclude": [
      "externals/**",
      "**/__*.js",
      "test/**/*.*"
    ]
  },
  "standard": {
    "ignore": [
      "externals/**"
    ],
    "globals": []
  }
}
