{
  "name": "mora-scripts",
  "version": "1.5.0",
  "description": "Some collection scripts by myself",
  "scripts": {
    "postinstall": "node hooks/scripts/install",
    "postuninstall": "node hooks/scripts/install --reverse",
    "release": "cli/run npm version minor -m 'chore: bump minor version to pkg.version'",
    "preversion": "npm test",
    "version": "cli/puts '%cyou can run build and add build file to git in here' cyan",
    "postversion": "git push --follow-tags && npm publish && cli/run cnpm sync pkg.name",
    "lint": "standard libs/lang/*.js",
    "test": "nyc _mocha **/test/__*.js",
    "test:watch": "mocha --watch **/test/__*.js",
    "report:html": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "jsdoc -c ./jsdoc.json libs/fs/** libs/lang/**"
  },
  "bin": {
    "run": "cli/run",
    "puts": "cli/puts",
    "hooks": "hooks/scripts/install.js",
    "commit-msg-help": "cli/commit-msg-help"
  },
  "keywords": [
    "mora",
    "scripts",
    "collection"
  ],
  "author": "Mora <qiuzhongleiabc@126.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/mora-scripts"
  },
  "license": "MIT",
  "dependencies": {
    "cross-spawn": "^4.0.0",
    "semver-regex": "1.0.0"
  },
  "devDependencies": {
    "codecov": "1.0.1",
    "docdash": "web-build-hub/docdash",
    "mocha": "2.5.3",
    "nyc": "6.6.1",
    "standard": "7.1.2"
  },
  "config": {
    "hooks": {
      "commit-msg": true,
      "post-merge": true,
      "pre-push": true
    }
  },
  "nyc": {
    "check-coverage": false,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "report-dir": "externals/coverage",
    "include": [
      "cli/*",
      "libs/**/*.js",
      "js/**"
    ],
    "exclude": [
      "externals/**",
      "**/__*.js",
      "test/**/*.*"
    ]
  },
  "standard": {
    "ignore": [
      "externals/**"
    ],
    "globals": [
      "it",
      "describe",
      "context",
      "xit",
      "xdescribe",
      "xcontext"
    ]
  }
}
